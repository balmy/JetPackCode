<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data/>

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <TextView
                android:id="@+id/hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <Button
                android:id="@+id/basic_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/hello"
                android:gravity="center"
                android:text="basic by RxJava"/>

        <Button
                android:id="@+id/basic_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/basic_one"
                android:gravity="center"
                android:text="basic by Call"/>

        <Button
                android:id="@+id/basic_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/basic_two"
                android:gravity="center"
                android:text="basic by RxJava Frame"/>

        <Button
                android:id="@+id/basic_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/basic_three"
                android:gravity="center"
                android:text="basic by common Frame"/>

    </android.support.constraint.ConstraintLayout>
</layout>